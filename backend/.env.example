# Application Configuration
APP_NAME=SymptoGuide API
APP_VERSION=2.0.0
DEBUG=False

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ML Model Configuration
MODEL_PATH=ml_artifacts/models
MODEL_VERSION=v1
ENABLE_MODEL_CACHE=True

# Cache Configuration (optional - defaults to in-memory)
REDIS_URL=
CACHE_TTL=3600
ENABLE_CACHE=True

# Rate Limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Training Configuration
TRAINING_DATA_PATH=data/cleaned_datasets
TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=5

# Feature Engineering
USE_SMOTE=True
AUGMENTATION_FACTOR=3
ENABLE_INTERACTION_FEATURES=True

# Hyperparameter Tuning
ENABLE_HYPERPARAM_TUNING=True
OPTUNA_TRIALS=50
